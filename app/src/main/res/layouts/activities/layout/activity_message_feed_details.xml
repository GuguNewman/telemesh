<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.w3engineers.unicef.util.helper.TimeUtil" />

        <variable
            name="feedEntity"
            type="com.w3engineers.unicef.telemesh.data.local.feed.FeedEntity" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/message_feed_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/main_toolbar"
                layout="@layout/app_toolbar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.design.widget.CoordinatorLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/message_feed_content_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/message_feed_header">

            <View
                android:id="@+id/feed_provider_logo_background"
                android:layout_width="@dimen/width_70"
                android:layout_height="@dimen/height_70"
                android:layout_margin="@dimen/margin_10"
                android:background="@drawable/circle_background"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_view_feed_provider_logo"
                android:layout_width="@dimen/width_70"
                android:layout_height="@dimen/height_70"
                android:layout_margin="@dimen/margin_10"
                android:contentDescription="@string/msg_feed_provider_logo"
                android:padding="@dimen/padding_5"
                android:src="@drawable/ic_unicef"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/message_feed_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxWidth="@dimen/width_240"
                android:maxLines="@integer/max_line_1"
                android:padding="@dimen/padding_5"
                android:text="@{feedEntity.feedTitle}"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/image_view_feed_provider_logo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/message_feed_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxWidth="@dimen/width_240"
                android:maxLines="@integer/max_line_1"
                android:padding="@dimen/padding_5"
                android:text="@{TimeUtil.getFormatDateTime(feedEntity.feedTime)}"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                app:layout_constraintLeft_toRightOf="@+id/image_view_feed_provider_logo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/message_feed_title" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/message_feed_details"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin_10"
            android:padding="@dimen/padding_5"
            android:scrollbars="vertical"
            android:text="@{feedEntity.feedDetail}"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/message_feed_content_body">

        </TextView>

    </android.support.constraint.ConstraintLayout>


</layout>